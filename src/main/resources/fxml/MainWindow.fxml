<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx/17" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="taskmanager.ui.gui.MainWindow"
            prefHeight="600.0" 
            prefWidth="400.0">
    <VBox AnchorPane.bottomAnchor="0.0" 
          AnchorPane.leftAnchor="0.0" 
          AnchorPane.rightAnchor="0.0" 
          AnchorPane.topAnchor="0.0" 
          spacing="10.0">
        <HBox alignment="TOP_RIGHT">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            <ToggleButton fx:id="darkModeToggle" text="ðŸŒ™"/>
        </HBox>
        <ScrollPane fx:id="scrollPane" fitToWidth="true" VBox.vgrow="ALWAYS">
            <VBox fx:id="dialogContainer" spacing="10.0">
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </padding>
            </VBox>
        </ScrollPane>
        <HBox spacing="10.0">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            <TextField fx:id="userInput" 
                      HBox.hgrow="ALWAYS" 
                      promptText="Type a command..." 
                      onAction="#handleUserInput"/>
            <Button fx:id="sendButton" 
                    text="Send" 
                    onAction="#handleUserInput"/>
        </HBox>
    </VBox>
</AnchorPane>
